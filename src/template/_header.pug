mixin navDropdown(navDropdownId='navbar-dropdown', catalog, dropdownItems)
  li.nav-item.dropdown
    |
    |
    a.nav-link.dropdown-toggle(id=navDropdownId, href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')=catalog
    .dropdown-menu(aria-labelledby=navDropdownId)
      |
      |
      each href, name in dropdownItems
        a.dropdown-item(href=href)=name
        |
        |
